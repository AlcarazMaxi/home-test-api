# API Test Environment Configuration
# Copy this file to .env and update values as needed

# Base URL for the API under test
BASE_URL=http://localhost:3100/api

# Test execution settings
KARATE_ENV=dev
PARALLEL_WORKERS=4
TIMEOUT=30000

# Reporting settings
GENERATE_REPORTS=true
KARATE_REPORTS_DIR=target/karate-reports

# Performance settings
RESPONSE_TIME_THRESHOLD=2000
P95_THRESHOLD=3000

# Retry settings
RETRY_COUNT=3
RETRY_INTERVAL=1000
RETRY_MULTIPLIER=2.0
MAX_RETRY_INTERVAL=10000

# Security settings
ENABLE_SECURITY_CHECKS=false
VALIDATE_SSL=true

# Logging settings
LOG_LEVEL=INFO
LOG_PRETTY_REQUEST=true
LOG_PRETTY_RESPONSE=true
