# API Test Environment Configuration
# Copy this file to .env and update values as needed

# Base URL for the API under test
BASE_URL=http://localhost:3100/api

# Test execution settings
KARATE_ENV=dev
PARALLEL_WORKERS=4
TIMEOUT=30000

# Reporting settings
GENERATE_REPORTS=true
KARATE_REPORTS_DIR=target/karate-reports

# Karate specific environment variables
KARATE_CONNECT_TIMEOUT=10000
KARATE_READ_TIMEOUT=30000
KARATE_WRITE_TIMEOUT=30000
KARATE_RETRY_COUNT=3
KARATE_RETRY_INTERVAL=1000
KARATE_RETRY_MULTIPLIER=2.0
KARATE_MAX_RETRY_INTERVAL=10000
KARATE_LOG_LEVEL=INFO
KARATE_LOG_PRETTY_REQUEST=true
KARATE_LOG_PRETTY_RESPONSE=true
KARATE_ENABLE_METRICS=true
KARATE_RESPONSE_TIME_THRESHOLD=2000
KARATE_P95_THRESHOLD=3000
KARATE_ENABLE_SECURITY_CHECKS=false
KARATE_VALIDATE_SSL=true
KARATE_GENERATE_REPORTS=true
KARATE_REPORT_DIR=target/karate-reports
KARATE_INCLUDE_REQUEST_RESPONSE=true
